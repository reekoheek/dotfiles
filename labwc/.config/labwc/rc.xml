<?xml version="1.0"?>
<labwc_config>
	<theme>
		<name>reekoheek</name>
		<titleLayout></titleLayout>
		<!-- <cornerRadius>8</cornerRadius> -->
		<keepBorder>yes</keepBorder>
		<dropShadows>yes</dropShadows>
	</theme>

	<desktops>
		<number>2</number>
		<firstdesk>1</firstdesk>
		<names>
			<name>Desktop 1</name>
			<name>Desktop 2</name>
		</names>
		<popupTime>875</popupTime>
	</desktops>

	<windowSwitcher show="yes" preview="yes" outlines="yes">
		<fields>
			<field content="app_id" width="20%" />
			<field content="title" width="80%" />
		</fields>
	</windowSwitcher>

	<keyboard>
		<default />

		<!-- window manager -->
		<keybind key="W-r">
			<action name="Reconfigure"/>
			<action name="Execute">
				<command>notify-send "Labwc" "Labwc reloaded"</command>
			</action>
		</keybind>

		<keybind key="W-l">
			<action name="Execute" command="swaylock -c 000000" />
		</keybind>

		<keybind key="C-A-Delete">
			<action name="Exit" />
		</keybind>

		<!-- workspace -->
		<keybind key="C-A-Left">
			<action name="GoToDesktop" to="left" wrap="yes" />
		</keybind>

		<keybind key="C-A-Right">
			<action name="GoToDesktop" to="right" wrap="yes" />
		</keybind>

		<keybind key="S-A-Left">
			<action name="SendToDesktop" to="left" wrap="yes" />
		</keybind>

		<keybind key="S-A-Right">
			<action name="SendToDesktop" to="right" wrap="yes" />
		</keybind>

		<keybind key="W-1">
			<action name="GoToDesktop" to="1" />
		</keybind>

		<keybind key="W-2">
			<action name="GoToDesktop" to="2" />
		</keybind>

		<keybind key="W-3">
			<action name="GoToDesktop" to="3" />
		</keybind>

		<keybind key="W-4">
			<action name="GoToDesktop" to="4" />
		</keybind>

		<keybind key="W-5">
			<action name="GoToDesktop" to="5" />
		</keybind>

		<keybind key="W-6">
			<action name="GoToDesktop" to="6" />
		</keybind>

		<keybind key="W-7">
			<action name="GoToDesktop" to="7" />
		</keybind>

		<keybind key="W-8">
			<action name="GoToDesktop" to="8" />
		</keybind>

		<keybind key="W-9">
			<action name="GoToDesktop" to="9" />
		</keybind>

		<!-- window -->
		<keybind key="C-q">
			<action name="Close" />
		</keybind>

		<keybind key="A-F4">
			<action name="Close" />
		</keybind>

		<keybind key="A-Tab">
			<action name="NextWindow" />
		</keybind>

		<keybind key="A-S-Tab">
			<action name="PreviousWindow" />
		</keybind>

		<keybind key="W-Tab">
			<action name="NextWindow" allWorkspaces="yes" />
		</keybind>

		<keybind key="W-d">
			<action name="ToggleShowDesktop" />
		</keybind>

		<keybind key="W-a">
			<action name="ToggleMaximize" />
		</keybind>

		<keybind key="W-c">
			<action name="UnMaximize" />
			<action name="MoveToCenter" />
			<action name="ResizeTo" width="50%" height="50%" />
		</keybind>

		<keybind key="W-Up">
			<action name="UnMaximize" />
			<action name="SnapToEdge" direction="up" />
		</keybind>

		<keybind key="W-Down">
			<action name="UnMaximize" />
			<action name="SnapToEdge" direction="down" />
		</keybind>

		<keybind key="W-Left">
			<action name="UnMaximize" />
			<action name="SnapToEdge" direction="left" />
		</keybind>

		<keybind key="W-Right">
			<action name="UnMaximize" />
			<action name="SnapToEdge" direction="right" />
		</keybind>

		<keybind key="W-x">
			<action name="ShowMenu" menu="client-menu" />
		</keybind>

		<!-- volume/brightness -->
		<keybind key="C-1">
			<action name="Execute">
				<command>amixer set Master toggle</command>
			</action>
		</keybind>

		<keybind key="C-2">
			<action name="Execute">
				<command>wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%-</command>
			</action>
		</keybind>

		<keybind key="C-3">
			<action name="Execute">
				<command>wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+</command>
			</action>
		</keybind>

		<keybind key="C-4">
			<action name="Execute">
				<command>brightnessctl set 1%-</command>
			</action>
		</keybind>

		<keybind key="C-5">
			<action name="Execute">
				<command>brightnessctl set +1%</command>
			</action>
		</keybind>

		<keybind key="XF86AudioMute">
			<action name="Execute">
				<command>amixer set Master toggle</command>
			</action>
		</keybind>

		<keybind key="XF86AudioLowerVolume">
			<action name="Execute">
				<command>wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%-</command>
			</action>
		</keybind>

		<keybind key="XF86AudioRaiseVolume">
			<action name="Execute">
				<command>wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+</command>
			</action>
		</keybind>

		<keybind key="XF86_MonBrightnessDown">
			<action name="Execute">
				<command>brightnessctl set 1%-</command>
			</action>
		</keybind>

		<keybind key="XF86_MonBrightnessUp">
			<action name="Execute">
				<command>brightnessctl set +1%</command>
			</action>
		</keybind>

		<!-- application -->
		<keybind key="W-space">
			<action name="Execute" command="fuzzel" />
		</keybind>

		<keybind key="W-Return">
			<action name="Execute" command="foot" />
		</keybind>

		<keybind key="W-w">
			<action name="Execute">
				<command>/home/reekoheek/opt/zen/zen -P default</command>
			</action>
		</keybind>

		<keybind key="W-e">
			<action name="Execute">
				<command>gtk-launch yazi.desktop</command>
			</action>
		</keybind>

		<keybind key="W-p">
			<action name="Execute">
				<command>sh -c 'flameshot full --raw | tee ~/Pictures/Screenshots/$(date +%Y%m%d_%H%M%S).png | wl-copy'</command>
			</action>
		</keybind>

		<keybind key="W-A-p">
			<action name="Execute">
				<command>sh -c 'flameshot gui --raw | tee ~/Pictures/Screenshots/$(date +%Y%m%d_%H%M%S).png | wl-copy'</command>
			</action>
		</keybind>
	</keyboard>

	<mouse>
		<default />
		<context name="Frame">
			<mousebind button="A-Left" action="Drag">
				<action name="Move" />
			</mousebind>
			<mousebind button="A-Right" action="Drag">
				<action name="Resize" />
			</mousebind>
		</context>
		<context name="Root">
			<mousebind button="Right" action="Press">
				<action name="ShowMenu" menu="root-menu" />
			</mousebind>
		</context>
	</mouse>

	<libinput>
		<device category="default">
			<naturalScroll>yes</naturalScroll>
		</device>
	</libinput>

	<windowRules>
		<windowRule identifier="*" serverDecoration="no"></windowRule>
	</windowRules>
</labwc_config>
